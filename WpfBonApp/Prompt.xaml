<Window x:Class="WpfBonApp.Prompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBonApp"
        mc:Ignorable="d"
        Title="Vul in" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBox Name="txtPrompt" Grid.Row="1" VerticalAlignment="Top" Height="20" Width="200"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="50" Width="120" VerticalAlignment="Bottom">
            <Button Name="btnOk" Grid.Row="1" Margin="0 0 20 0" HorizontalAlignment="Left"  Content="Ok" Height="20" Width="50" Click="btnOk_Click"/>
            <Button Name="btnCanel" Grid.Row="1" Margin="0 0 0 0" HorizontalAlignment="Right" Content="Cancel" Height="20" Width="50" Click="btnCancel_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
